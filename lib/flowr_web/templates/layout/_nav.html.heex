        <li class="nav-item">
          <%= active_link @conn, "Developer Console", to: Routes.developer_developer_path(@conn, :index), class: "nav-link"%>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">
            Customer: <%= current_customer(@conn).owner_id %>
          </a>
        </li>
        <li class="nav-item">
          <%= link "Sign Out", to: Routes.auth_path(@conn, :delete), method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link "Sign In", to: Routes.auth_path(@conn, :new), class: "nav-link" %>
        </li>
      <% end %>

    <img src={Routes.static_path(@conn, "/images/logo.svg")} width="40" height="40" alt="">
    Flowr
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <%= if current_customer(@conn) do %>
        <li class="nav-item">
          <%= active_link @conn, "Dashboard", to: Routes.dashboard_dashboard_path(@conn, :index), class: "nav-link"%>
        </li>
      <% end %>
      <li class="nav-item">
        <%= active_link @conn, "Templates", to: Routes.template_path(@conn, :index), class: "nav-link"%>
      </li>
    </ul>
    <ul class="navbar-nav">
